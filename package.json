{
  "name": "purple-chat",
  "version": "0.1.0",
  "description": "A modern React chat application",
  "main": "index.js",
  "scripts": {
    "analyze": "webpack --json | webpack-bundle-size-analyzer",
    "build": "webpack",
    "build:w": "webpack --watch",
    "publish": "NODE_ENV=production npm run build && firebase deploy",
    "fire:serve": "firebase serve -o 0.0.0.0 -p 3000",
    "start": "webpack-dev-server --content-base build/ --port 3000 --host 0.0.0.0",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "Patryk Kalinowski <patrislav7@gmail.com>",
  "license": "ISC",
  "eslintConfig": {
    "extends": "eslint-config-patrislav",
    "env": {
      "browser": true,
      "es6": true
    }
  },
  "babel": {
    "presets": [
      [
        "es2015",
        {
          "modules": false
        }
      ],
      "stage-0",
      "react"
    ],
    "plugins": [
      "transform-decorators-legacy"
    ]
  },
  "dependencies": {
    "blueimp-load-image": "^2.6.2",
    "firebase": "^3.4.0",
    "history": "^4.2.0",
    "material-ui": "^0.15.4",
    "moment": "^2.15.1",
    "path-to-regexp": "^1.5.3",
    "react": "^15.3.1",
    "react-dom": "^15.3.1",
    "react-redux": "^4.4.5",
    "react-tap-event-plugin": "^1.0.0",
    "redux": "^3.6.0",
    "redux-thunk": "^2.1.0"
  },
  "devDependencies": {
    "babel-core": "^6.14.0",
    "babel-loader": "^6.2.5",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-polyfill": "^6.13.0",
    "babel-preset-es2015": "^6.14.0",
    "babel-preset-react": "^6.11.1",
    "babel-preset-stage-0": "^6.5.0",
    "eslint": "^3.5.0",
    "eslint-config-patrislav": "^0.1.0",
    "eslint-plugin-import": "^1.15.0",
    "eslint-plugin-react": "^6.2.2",
    "file-loader": "^0.9.0",
    "html-webpack-plugin": "^2.22.0",
    "sw-toolbox": "^3.3.0",
    "webpack": "^2.1.0-beta.25",
    "webpack-dev-server": "^2.1.0-beta.5"
  }
}
